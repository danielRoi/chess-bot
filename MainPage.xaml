<ContentPage
    x:Class="ChessApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Chess">

    <Grid ColumnDefinitions="Auto, Auto" Padding="10">

        <!-- Left: Chess Board -->
        <Grid Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center">
            <Grid WidthRequest="{Binding Source={x:Reference ChessGrid}, Path=HeightRequest}">
                <Grid x:Name="ChessGrid"
                      RowSpacing="0"
                      ColumnSpacing="0"
                      Padding="0"
                      VerticalOptions="Fill"
                      HorizontalOptions="Fill"
                      HeightRequest="400"
                      WidthRequest="400">
                    <!-- Board setup goes here -->
                </Grid>
            </Grid>
        </Grid>

        <!-- Right: Controls -->
        <StackLayout Grid.Column="1" Margin="20,0" VerticalOptions="Center" Spacing="10">
            <Entry x:Name="UserInput" 
                   Text="rnbqkbnr/pppppppp/8/8/8/8/PPPPPPPP/RNBQKBNR" 
                   WidthRequest="200"/>
            <Button Text="Set FEN" Clicked="orderInFenNotation"/>
            <Button Text="Copy FEN Position" Clicked="copyPosition"/>
            <Label x:Name="EvalLabel" Text="Eval: " FontSize="Medium"/>
        </StackLayout>

    </Grid>
</ContentPage>
